<% provide(:title, "Log in") %>
<h1 class="center">Welcome to RoomDraw! </h1>
<h2 class="center">Log In Below</h2>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, html: {class: "center"} do |f| %>

      <%= f.label :student_id, "Student ID" %>
      <%= f.text_field :student_id, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-lg btn-primary center" %>
    <% end %>
  </div>
</div>
