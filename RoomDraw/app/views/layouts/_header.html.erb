<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <% if current_user.present? %>
      <% std = Student.find_by id: current_user.student_id %>
      <ul class="nav navbar-nav navbar-left">
        <li class="title"><%= "#{current_user.student_id}" %></li>
        <li class="title"><%= "##{std[:draw_num] - 10000}" %></li>
      </ul>
    <% end %> 
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", "/users_login/#{params[:id]}" %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <!-- <li class="divider"></li> -->
              <li>
                <%= link_to "Log out", login_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <%= render "layouts/flash" %>
</header>